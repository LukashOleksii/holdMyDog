<% if current_user.type == 'owner' %> <!-- set check if owner-->
 <%= render partial: 'owner_profiles/add_pet' %>
 <%= render partial: 'owner_profiles/edit_pet' %>
<% end %>

<main class=" container d-flex justify-content-start mt-5 h-100">
  <section class="side-menu d-flex flex-column align-items-center w-25">
    <div class="user-avatar " style="
    background-image: url(https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/golden-retriever-royalty-free-image-506756303-1560962726.jpg?crop=0.672xw:1.00xh;0.166xw,0&resize=640:*); 
    "> <!-- set user.image-->
    
    </div>
    <div class="location mt-5">
      <h5 class="location-title primary-color title ">Location</h5>
      <div class="location-map" style="
    background-image: url(https://i0.wp.com/cssscript.com/wp-content/uploads/2018/03/Simple-Location-Picker.png?fit=561%2C421&ssl=1); 
    "> <!-- set map here-->
      </div>
    </div>
  </section>
  <section class="main-info w-75 d-flex flex-column">
    <div class="user-info">
      <div class="user-info-header">
        <div class=" d-flex justify-content-between primary-color title">
          <p><%= current_user.profile.first_name  %> <%= current_user.profile.last_name  %> </p>
          <div class="d-flex ">
          <% if current_user.type == 'owner' && current_user.id == current_user.profile.user_id %> <!-- current_user is owner-->
            <button class=" custom btn ps-4 pe-4" >Edit</button>
          <% end %>
          </div>
        </div>
        <div class="stars d-flex fs-1 ">
          <div>
            <% 2.times do  %>
                <span class="gold glyphicon glyphicon-star"></span>
            <% end %>
            <% 3.times do %>
                <span class="gold glyphicon glyphicon-star-empty"></span>
            <% end %>
          </div>
          <div class="d-flex"> 
            <p class="review-number fs-4 ms-3 mt-3 fw-bold">16 booking </p>  <!-- set current_user.num_bookings -->
            <p class="review-number fs-4 ms-3 mt-3 fw-bold"> 3 </p> <!-- set current_user.num_dogs -->
            <!--  if num dog == 1 
                    <p class="review-number fs-4 ms-3 mt-3 fw-bold"> dog </p>
                  else 
                    <p class="review-number fs-4 ms-3 mt-3 fw-bold"> dogs </p>
                  end
                  -->
            <p class="review-number fs-4 ms-3 mt-3 fw-bold"> dogs </p>
          </div>
        </div>
        <div class="info w-75 mt-3">
          <h6 class="fw-bold fs-4">About john:</h6> <!-- set User.name-->
          <p class="description ">
            Lorem, ipsum dolor sit amet consectetur adipisicing elit. Vel quia, odio maxime nobis cum repellat dolorem
            possimus magni incidunt sunt non ipsa inventore temporibus magnam, pariatur quas nulla aliquam aut!
            Lorem, ipsum dolor sit amet consectetur adipisicing elit. Vel quia, odio maxime nobis cum repellat dolorem
            possimus magni incidunt sunt non ipsa inventore temporibus magnam, pariatur quas nulla aliquam aut!
          </p>
        </div>
      </div>
    </div>
    <div class="reviews  mt-2 mb-3" >
      <p class="primary-color title">Pets</p>
      <div class="pet-scroll">
        <% 3.times do  %>
            <div class="reviews-container br-1 mb-2 d-flex p-3 h-auto ">
                <div class="review d-flex mt-3">
                <div class="comment user-avatar" style="
            background-image: url(https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/golden-retriever-royalty-free-image-506756303-1560962726.jpg?crop=0.672xw:1.00xh;0.166xw,0&resize=640:*); 
            "> <!-- set user.image-->
                </div>
                <div class="review-info w-75 ">
                    <div class="review-header ">
                    <div class="review-title d-flex justify-content-between primary-color">
                    
                        <h4 class="fw-bold fs-1"> John Doe</h4>
                        <div class="d-flex ">
                          <% if current_user.type == 'owner' %> <!-- current_user is owner-->
                          <h4 class="fw-bold fs-1 me-5">Small dog</h4>
                          <div class="edit-pet">
                            <button class=" custom btn  ps-4 pe-4 " onclick="getElementById('edit_pets').style.visibility='visible'" >Edit</button>
                            <span class="btn trash glyphicon glyphicon-trash " style="z-index:0;"></span>
                          </div>
                          <% else %>
                            <h4 class=" edit-pet fw-bold fs-1 mt-1">Small dog</h4>
                          <% end %>
                        </div>
                    </div>
                    
                    <div class="d-flex">
                    <p class="date mt-1 fs-4 fw-bold">Height: 30cm</p>
                    <p class="date mt-1 fs-4 fw-bold ms-2">Weight: 10kg</p>
                    <p class="date mt-1 fs-4 fw-bold ms-2">Age: 2y</p>
                       
                    </div>
                    </div>
                    <div class="review-main">
                    <h6 class="fw-bold fs-5">About this pet:</h6>
                    <p class="description">
                        Lorem, ipsum dolor sit amet consectetur adipisicing elit. Vel quia, odio maxime nobis cum repellat dolorem
                        possimus magni incidunt sunt non ipsadolor sit amet consectetur adipisicing elit. Vel quia, odio maxime nobis cum repellat dolorem
                        possimus magni incidunt sunt non
                    </p>
                    </div>
                </div>
                </div>
            </div>
        <% end %>
      </div>
       <% if true %> <!-- current_user is owner-->
        <button class=" add-more-pets start-100 primary-color mt-4 fs-3 " onclick="getElementById('add_pets').style.visibility='visible'" >+ Add more...</button> 
      <% end %>
    </div>
  </section>
</main>