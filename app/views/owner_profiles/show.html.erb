<% if true %> <!-- set check if owner-->
<div id="add_pets" class="hidden position-fixed start-50 w-50 h-100 top-0 form-block d-flex " style="z-index:1;">
  <div class="form-block ">
    <h2 class="form-header mb-5">Tell us about your pet!</h2>
    <div class="name-gender ">
      <input class="form-control mt-2 fs-4" type="text" placeholder="Name">
      <select class="form-select mt-4 fs-4">
        <option selected>Choose gender</option>
        <option value="1">Male</option>
        <option value="1">Female</option>
      </select>
    </div>
    <div class="size-years mt-4">
      <div class="d-flex mb-3">
        <p class="text pt-2 w-100"> What is his weight?</p>
        <input class="form-control fs-4" type="text" placeholder="0">
      </div>
      <div class="d-flex mb-3">
        <p class="text pt-2 w-100"> What is his height?</p>
        <input class="form-control fs-4" type="text" placeholder="0">
      </div>
      <div class="d-flex mb-3">
        <p class="text pt-2 w-100"> How old is your pet?</p>
        <input class="form-control fs-4" type="text" placeholder="0">
      </div>
    </div>
   <div class="description mt-4">
      <p class="text pt-2"> What else you wish to tell about your pet?</p>
      <div class="form-group">
          <textarea class="w-100 ps-4 pt-4 fs-4" id="exampleFormControlTextarea1" rows="4"  placeholder="Additional information"></textarea>
      </div>
    </div>
    <div>
      <button type="button" class="btn btn-outline-success pet mt-4">Upload photo of your pet</button>
    </div>
    <button type="button" class="btn btn-secondary custom-1 mt-4" onclick="getElementById('add_pets').style.visibility='hidden'">Cancel</button>
    <button type="button" class="btn btn-outline-success pet mt-4">Add</button>
    <div class="mt-5 pt-5">
      <p class="fw-bold"> Required fields marked with *</p>
      <p class="">P.S. Donâ€™t be scary to place your real name we protect your <br>
          privacy and aligned with GDPR conventions</p>
    </div>
  </div>
</div>
<% end %>

