<div class="background-img background-img-height ">
  <div class="row ">
    <div class="col-4">
    </div>
    <div class="col-4 align-items-start  form-block-search d-flex rounded-3">
      <div class="container">
          <div class="row g-3 m-3">
                  <h2 class="form-header-search mt-5">For which period of time you need a sitter?</h2>
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="">
                    <%= f.email_field :email, autofocus: true, placeholder: 'Start date*', class:"form-field mb-3 " %>
                  </div>

                  <div class="">
                    <%= f.email_field :email, autofocus: true, placeholder: 'End date*', class:"form-field mb-3" %>
                  </div>

                    <div class="col-7">
                        <%= f.email_field :email, placeholder:"Location", class:"form-field" %>
                    </div>

                   <div class="field">
                    <%= f.label :email, "Which kind of pets you can take for sitting?", class:"form-lable" %>
                    <br>

                    <%= check_box_tag "Small(0 - 10kg)", id:"monday" %> Small(0 - 10kg)
                    <br>
                    <%= check_box_tag "Medium(11 - 20kg)", 'yes', id:"monday" %> Medium(11 - 20kg)
                    <br>
                    <%= check_box_tag "Large(21 - 40kg)", id:"monday" %> Large(21 - 40kg)
                    <br>
                    <%= check_box_tag "Giant(41kg+)", id:"monday" %> Giant(41kg+)
                  </div>

                  <div class="row mt-5">
                    <div class="col-md-6 d-flex justify-content-end">
                      <%= f.submit "Reset", class: "btn btn-light next-step-btn mt-4" %>
                    </div>

                    <div class="col-md-6">
                      <div class="actions">
                        <%= f.submit "Search", class: "btn btn-light next-step-btn mt-4" %>
                      </div>
                    </div>
                  </div>

                  <% end %>
          </div>
      </div>
      </div>
      <div class="col-4">

      </div>
    </div>
  </div>

<div class="row m-5">
  <div class="col-12">
      <div class="reviews-scroll">
            <% 3.times do  %>
              <div class="reviews-container br-1 mb-2 d-flex p-3 h-auto ">
                <div class="review d-flex mt-3">
