<div class="background-img ">
  <div class="row h-100">
    <div class="col-6"></div>
    <div class="col-6 align-items-start form-block d-flex">
      <div class="form-block">
        <h2 class="form-header">Sign up now!</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.fields_for :profile do |pf| %>
            <div class="field">
              <%= pf.text_field :first_name, placeholder: 'First name *', class: 'form-field mb-3' %>
            </div>


            <div class="field">
              <%= pf.text_field :last_name, placeholder: 'Last name *', class: 'form-field mb-3' %>
            </div>

            <div class="field">
              <%= pf.text_field :phone, placeholder: 'Phone', class: 'form-field mb-3' %>
            </div>
          <% end %>

          <div class="field">
            <%= f.email_field :email, autocomplete: "email", placeholder: 'Email *', class: 'form-field mb-3' %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password *', class: 'form-field mb-3' %>
          </div>
          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Repeat password *' , class: 'form-field mb-3' %>
          </div>

          <%= f.fields_for :profile do |profile_form| %>
            <div class="field">
              <%= profile_form.text_area :description, cols: 40, rows: 3, placeholder: 'Tell us about yourself ;)', class:"form-field-textarea mb-3" %>
            </div>
          <% end %>

          <div class="mb-3">* How would you like to use the service?</div>
          <div class="field">
            <div class="form-check">
              <%= f.radio_button :type, Sitter.name, css: 'form-check-input' %>
              <%= label :type_sitter, 'I want to hold someone`s pet', css: 'form-check-label' %>
            </div>

            <div class="form-check">
              <%= f.radio_button :type, Owner.name, css: 'form-check-input', :checked => true %>
              <%= label :type_owner, 'I want to give my pet to sitter', css: 'form-check-label' %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-light sign-up-btn mt-4" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<%= render "devise/shared/links" %>
</div>
